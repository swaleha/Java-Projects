/**
 * This class asks users about their age
 * and returns how long hey have lived in months,days and minutes
 * 
 * @author swaleha
 * @date 07/07/17
 */

import java.util.Scanner;
import java.util.Date;
import java.text.DateFormat;
import java.text.SimpleDateFormat;

public class AgeProgram {
	@SuppressWarnings("deprecation")
	public static void main(String[] args) {

		Scanner scan = new Scanner(System.in);
		System.out.println("What's your age in years?");
		int age = scan.nextInt();
		
		int months = age * 12;
		int days = age * 365 ;
		int minutes = days * 24 * 60;
		
		
		System.out.println("\nBased on your age in years: you have lived for "+months+" months, "+days+" days and "+minutes+" minutes");
		
		
	}
	

	
}
